<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.androidarea51.rhg135.sandbox"
          android:versionCode="1"
          android:versionName="0.0.1" >

  <uses-sdk android:minSdkVersion="10" />

  <application
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name">
      <uses-permissions android:name="android.permission.INTERNET" />
      <uses-permissions android:name="android.permission.WAKE_LOCK" />
      <activity android:name="neko.splash.SplashActivity"
                android:theme="@android:style/Theme.Translucent.NoTitleBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".RadioControllerActivity">
      <intent-filter>
	      <action android:name="com.androidarea51.rhg135.sandbox.MAIN"/>
              <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
  </application>

</manifest>
